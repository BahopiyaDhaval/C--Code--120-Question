//16)Array : Median of 2 sorted arrays of equal size
#include <iostream>
using namespace std;

double getMedian(int a[], int b[], int n) {
int i = 0, j = 0, count;
int m1 = 0, m2 = 0;
for (count = 0; count <= n; count++) {
if (i == n) { m1 = m2; m2 = b[j++]; continue; }
if (j == n) { m1 = m2; m2 = a[i++]; continue; }
if (a[i] < b[j]) { m1 = m2; m2 = a[i++]; }
else             { m1 = m2; m2 = b[j++]; }
    }
return (m1 + m2) / 2.0;
}

int main() {
int a[] = {1, 3, 5}, b[] = {2, 4, 6};
int n = sizeof(a) / sizeof(a[0]);
cout << "Median: " << getMedian(a, b, n);
}
